<h1>Upload GIF</h1>
<%= form_for :gif, url: gif do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </p>
  
  <p>
    <%= f.label :recipe %><br>
    <%= f.text_area :recipe %>
  </p>
  
  <p>
    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, placeholder: "Separated with comma" %>
  </p>
 
  <p>
    <%= f.submit "Upload"%>
  </p>
<% end %>